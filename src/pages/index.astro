---
import Layout from "../layouts/Layout.astro";
import Info from "../components/Info.astro";
import Links from "../components/Links.astro";
import Particles from "../components/Particles.astro";
---

<Layout title={import.meta.env.NAME}>
  <!-- Particle background rendered in the browser -->
  <Particles />
  <!-- Main content -->
  <main>
    <Info name={import.meta.env.NAME} heading={import.meta.env.HEADING} />
    <Links
      linkedin={import.meta.env.LINKEDIN}
      github={import.meta.env.GITHUB}
      url={import.meta.env.URL}
      mysite={import.meta.env.MYSITE}
    />
    <div
      class="cf-turnstile"
      id="turnstile-widget"
      data-sitekey={import.meta.env.SITEKEY}
      data-callback="onTurnstileSuccess"
      data-execution="execute"
    >
    </div>
  </main>
</Layout>
<style>
  main {
    font-family: "Montserrat", sans-serif;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #141437;
    z-index: 1;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    overflow: hidden;
  }
</style>
