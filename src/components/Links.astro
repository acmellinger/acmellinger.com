---
import { Icon } from "astro-icon/components";
interface Props {
  linkedin: string;
  github: string;
  url: string;
  mysite: string;
}

const { linkedin, github, url, mysite } = Astro.props;
---

<div class="links">
  <button title="My Email" aria-label="My Email" id="emailBtn">
    <Icon name="mdi:email" class="icon" />
  </button>
  <a
    title="My Linkedin"
    aria-label="My LinkedIn"
    target="_blank"
    rel="noopener noreferrer"
    href={linkedin}
  >
    <Icon name="mdi:linkedin" class="icon" />
  </a>
  <a
    title="My Github"
    aria-label="My Github"
    target="_blank"
    rel="noopener noreferrer"
    href={github}
  >
    <Icon name="mdi:github" class="icon" />
  </a>
</div>

<div id="email-container" class="email-container">
  <a id="emailtext" class="emailtext"></a>
  <span id="statustext" class="statustext"></span>
</div>

<script is:inline define:vars={{ url, mysite }}>
  window.onTurnstileSuccess = async function (token) {
    try {
      var response = await fetch(url, {
        method: "POST",
        headers: { "content-type": "application/json" },
        body: JSON.stringify({ Token: token, Site: mysite }),
      });

      if (response.status === 200) {
        const rjson = await response.json();
        const email = rjson["email"];

        document.getElementById("statustext").innerText = "";

        var anchorElement = document.getElementById("emailtext");
        anchorElement.setAttribute(
          "href",
          "mailto:" + email + "?subject=Website Contact",
        );
        anchorElement.innerText = email;
      } else {
        throw new Error("Validation failed");
      }
    } catch (e) {
      document.getElementById("statustext").innerText = "Verification Failed";
      if (window.turnstile) window.turnstile.reset("#turnstile-widget");
    }
  };
</script>

<script>
  declare const turnstile: any;

  function onEmailClick() {
    const statusText = document.getElementById("statustext");

    document.getElementById("emailtext")!.innerText = "";

    if (statusText) statusText.innerText = "Verifying...";

    if (typeof turnstile !== "undefined") {
      turnstile.execute("#turnstile-widget");
    }
  }

  const button = document.getElementById("emailBtn");
  if (button) button.addEventListener("click", onEmailClick);
</script>

<style>
  button {
    background-color: Transparent;
    background-repeat: no-repeat;
    border: none;
    cursor: pointer;
    overflow: hidden;
    outline: none;
    padding: 0;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 0;
  }

  .links > * {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  :global(.icon) {
    display: block;
    text-align: center;
    color: #141437;
    width: 30px;
    height: 30px;
    padding: 10px;
    margin: 5px;
    transition: all 0.5s;
  }

  :global(.icon:hover) {
    opacity: 0.5;
  }

  :global(.icon:active) {
    opacity: 0.5;
  }

  @media only screen and (min-width: 768px) {
    :global(.icon) {
      width: 40px;
      height: 40px;
    }
  }

  .email-container {
    height: 1.5rem;

    display: flex;
    justify-content: center;
    align-items: center;

    text-align: center;
    width: 100%;
    margin-top: 10px;
  }

  .emailtext {
    text-decoration: underline;
    color: #141437;
    line-height: 1;
  }

  .statustext {
    color: #141437;
    font-size: 0.9em;
    line-height: 1;
  }
</style>
