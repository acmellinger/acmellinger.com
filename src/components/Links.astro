---
import { Icon } from "astro-icon/components";
interface Props {
  linkedin: string;
  github: string;
  url: string;
  mysite: string;
}

const { linkedin, github, url, mysite } = Astro.props;
---

<div class="links">
  <button title="My Email" aria-label="My Email" id="emailBtn">
    <Icon name="mdi:email" class="icon" />
  </button>
  <a
    title="My Linkedin"
    aria-label="My LinkedIn"
    target="_blank"
    rel="noopener noreferrer"
    href={linkedin}
  >
    <Icon name="mdi:linkedin" class="icon" />
  </a>
  <a
    title="My Github"
    aria-label="My Github"
    target="_blank"
    rel="noopener noreferrer"
    href={github}
  >
    <Icon name="mdi:github" class="icon" />
  </a>
</div>

<div id="email" class="email">
  &nbsp;
  <a id="emailtext" class="emailtext"></a>
  <p id="errortext" class="errortext">&nbsp;</p>
</div>

<script is:inline define:vars={{ url, mysite }}>
  // This function is called automatically by Cloudflare when the challenge is solved
  window.onTurnstileSuccess = async function (token) {
    console.log("Challenge solved. Verifying token...");

    // Clear previous errors
    document.getElementById("errortext").innerText = "Verifying...";

    try {
      var response = await fetch(url, {
        method: "POST",
        headers: {
          "content-type": "application/json",
        },
        body: JSON.stringify({
          // Capitalized to match the Worker
          Token: token,
          Site: mysite,
        }),
      });

      if (response.status === 200) {
        var anchorElement = document.getElementById("emailtext");
        const rjson = await response.json();
        const email = rjson["email"];

        anchorElement.setAttribute(
          "href",
          "mailto:" + email + "?subject=Website Contact",
        );
        anchorElement.innerText = email;
        document.getElementById("errortext").innerText = "";
      } else {
        throw new Error("Validation failed");
      }
    } catch (e) {
      var paraElement = document.getElementById("errortext");
      paraElement.innerText = "Verification Failed. Try again.";
      console.error(e);
      // Reset widget so they can click the button again
      if (window.turnstile) window.turnstile.reset("#turnstile-widget");
    }
  };
</script>

<script>
  // 1. Tell TypeScript that 'turnstile' is a global variable
  declare const turnstile: any;

  function onEmailClick() {
    // Check if the global variable exists before using it
    if (typeof turnstile !== "undefined") {
      turnstile.execute("#turnstile-widget");
    } else {
      console.error("Turnstile not loaded yet");
    }
  }

  const button = document.getElementById("emailBtn");
  if (button) {
    button.addEventListener("click", onEmailClick);
  }
</script>

<style>
  button {
    background-color: Transparent;
    background-repeat: no-repeat;
    border: none;
    cursor: pointer;
    overflow: hidden;
    outline: none;
    padding: 0;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 0;
  }

  .links > * {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  :global(.icon) {
    display: block;
    text-align: center;
    color: #141437;
    width: 30px;
    height: 30px;
    padding: 10px;
    margin: 5px;
    transition: all 0.5s;
  }

  :global(.icon:hover) {
    opacity: 0.5;
  }

  :global(.icon:active) {
    opacity: 0.5;
  }

  .emailtext {
    text-decoration: underline;
    margin: 0;
    color: #141437;
  }

  .emailerror {
    display: inline;
    margin: 0;
    color: #141437;
  }

  @media only screen and (min-width: 768px) {
    :global(.icon) {
      width: 40px;
      height: 40px;
    }
  }
</style>
